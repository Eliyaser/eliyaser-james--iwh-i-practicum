doctype html
html
    head
        title= `${title}`
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="/css/style.css")
    body.bg-light
        .container.mt-5
            h1.mb-3.text-primary Update Contact
            p.lead.mb-4 Update the contact's information below:

            form(method="POST", action=`/contacts/update/${contact.id}`, class="card p-4 shadow-sm")
                input(type="hidden", name="id", value=contact.id)

                .mb-3
                    label.form-label(for="firstname") First Name:
                    input.form-control(type="text", name="firstname", value=contact.properties.firstname || '', required)

                .mb-3
                    label.form-label(for="pet_name") Pet Name:
                    input.form-control(type="text", name="pet_name", value=contact.properties.pet_name || '', required)

                .mb-3
                    label.form-label(for="hobby") Hobby:
                    input.form-control(type="text", name="hobby", value=contact.properties.hobby || '', required)

                input(type="hidden", name="email", value=contact.properties.email || '')

                button.btn.btn-primary(type="submit") Update Contact
